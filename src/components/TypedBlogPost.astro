<a href={`/posts/${post.slug}`} class="card">
    <div class="card-image-container">
        <Image
            src={frontmatter.image}
            alt={frontmatter.title}
            width={500}
            width={500}
            quality="low"
            loading="lazy"
            transition:name={`${post.slug}-image`}
        />
    </div>
    <p class="card-title">{frontmatter.title}</p>
    <p  class="card-des">
        { frontmatter.description }
    </p>
    
</a>

<style>
    /* From Uiverse.io by akshat-patel28 */ 
.card {
  display: flex;
  flex-direction: column;
  width: 240px;
  height: 310px;
  max-height: 330px;
  background-color: var(--white);
  border-radius: 10px;
  box-shadow: 0px 10px 12px rgba(0, 0, 0, 0.08),
    -4px -4px 12px rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s;
  cursor: pointer;
  box-sizing: border-box;
  padding: 10px;
}

.card:hover {
  transform: translateY(-10px);
  box-shadow: 0px 20px 20px rgba(0, 0, 0, 0.1),
    -4px -4px 12px rgba(0, 0, 0, 0.08);
  cursor: pointer;
}

.card-image-container {
  width: 100%;
  height: 64%;
  border-radius: 10px;
  margin-bottom: 12px;
  overflow: hidden;
  background-color: rgb(165, 165, 165);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.image-icon {
  font-size: 40px;
  cursor: pointer;
}

.card-title {
  margin-bottom: 5px;
  font-size: 19px;
  font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
    "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
  font-weight: 600;
  color: #9de2f3;
  cursor: default;
  -webkit-box-orient: vertical;
  overflow: hidden;
  display: -webkit-box;
  cursor: pointer;
}

.card-des {
  -webkit-box-orient: vertical;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  margin: 0;
  font-size: 13px;
  font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
    "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
  color: #1797b8;
  cursor: default;
  cursor: pointer;
}

</style>